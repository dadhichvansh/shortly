<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />
    <title>URL Shortener</title>
  </head>
  <body>
    <div class="container">
      <form action="/" method="post">
        <h1>URL Shortener</h1>
        <div>
          <label for="url">Enter URL</label>
          <input type="url" name="url" id="url" required autocomplete="off" />
        </div>
        <div>
          <label for="shortCode">Enter Short Code (Optional)</label>
          <input
            type="text"
            name="shortCode"
            id="shortCode"
            autocomplete="off"
          />
        </div>
        <button type="submit">Shorten</button>
      </form>

      <h2>Shortened URLs</h2>
      <ul id="shortened-urls">
        <% Object.entries(links).map(([shortCode, url]) => { %> <% const
        truncatedUrl = url.length >= 30 ? `${url.slice(0, 30)}...` : url %>
        <li>
          <a href="/<%= shortCode %>" target="_blank">
            <%= host %>/<%= shortCode %>
          </a>
          &rarr; <%= truncatedUrl %>
        </li>
        <% }) %>
      </ul>
    </div>
  </body>
</html>
